@model WebLibrary.ViewModels.LivrosViewModel

<div class="row">
    <div class="col-md-12">
        <h2>Lista de livros </h2>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Autor</th>
                    <th scope="col" colspan="2">Ações</th>
                </tr>
            </thead>
            <tbody>

                @{
                    var index = 0;

                    if (Model.Livros.Any())
                    {
                        foreach (var livro in Model.Livros)
                        {
                            index++;

                            <tr>
                                <th scope="row">@index</th>
                                <td>@livro.Nome</td>
                                <td>@livro.Autor</td>
                                <td><a href="@Url.Action("Editar", "Home", new { id = livro.Id }, null)" title="Editar registro">Editar</a></td>
                                <td><a href="@Url.Action("Delete", "Home", new { id = livro.Id }, null)" title="Excluir registro">Excluir</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Não há registros ainda.</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <p><a class="btn btn-default" href="/home/novo">Cadastrar novo livro</a></p>
    </div>
</div>